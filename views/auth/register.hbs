<div class="row justify-content-center mt-4">
  <div class="col-sm-4">
    <h1>Register</h1>
    <form method="POST" action="/register">
      <div class="form-group">
        <label for="formGroupExampleInput">User Name</label>
        <input
          value="{{user.userName}}"
          name="userName"
          type="text"
          class="form-control {{#if errors.userName}}is-invalid{{/if}}"
          placeholder="User name"
        >
        {{#if errors.userName}}
          <div class="invalid-feedback">{{errors.userName}}</div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Full Name</label>
        <input
          value="{{user.fullname}}"
          name="fullname"
          type="text"
          class="form-control {{#if errors.fullname}}is-invalid{{/if}}"
          placeholder=" Fullname"
        >
        {{#if errors.fullname}}
          <div class="invalid-feedback">{{errors.fullname}}</div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Address</label>
        <input
          value="{{user.address}}"
          name="address"
          type="text"
          class="form-control"
          placeholder="Address"
        >
        {{#if errors.address}}
          <div class="invalid-feedback">{{errors.address}}</div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Email</label>
        <input
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="example@expample.com"
        >
        {{#if errors.email}}
          <div class="invalid-feedback">{{errors.email}}</div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="formGroupExampleInput2">Password</label>
        <input
          name="password"
          type="password"
          class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
        >
        {{#if errors.password}}
          <div class="invalid-feedback">{{errors.password}}</div>
        {{/if}}
      </div>
      
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>
</div>
